{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake clean",
            "type": "shell",
            "command": "rm -rf build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "cmake generate debug",
            "type": "shell",
            "command": "cmake -DCMAKE_BUILD_TYPE=Debug -G \"Unix Makefiles\" -S . -B ./build-debug",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "cmake generate release",
            "type": "shell",
            "command": "cmake -DCMAKE_BUILD_TYPE=Release -G \"Unix Makefiles\" -S . -B ./build-release",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build debug",
            "type": "shell",
            "command": "cd build-debug && make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "cmake generate debug"
            ]
        },
        {
            "label": "build release",
            "type": "shell",
            "command": "cd build-release && make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "cmake generate release"
            ]
        },
        {
            "label": "run debug",
            "type": "shell",
            "command": "./PeoplemonDebug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "build debug"
            ]
        },
        {
            "label": "run release",
            "type": "shell",
            "command": "./PeoplemonRelease",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "build release"
            ]
        },
        {
            "label": "unit test",
            "type": "shell",
            "command": "cd build/tests && ./Peoplemon.t --gtest_color=no",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "build"
            ]
        },
        {
            "label": "filtered tests",
            "type": "shell",
            "command": "cd build/tests && ./Peoplemon.t --gtest_filter=${input:tfilter} -v --gtest_color=no",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "build"
            ]
        },
        {
            "label": "build docs",
            "type": "shell",
            "command": "rm -rf docs/doxygen && doxygen Doxyfile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "inputs": [
        {
            "id": "tfilter",
            "description": "Regex filter for tests to run:",
            "default": "*",
            "type": "promptString"
        },
    ],
    "problemMatcher": {
        "base": "$gcc",
        "fileLocation": [
            "absolute"
        ]
    }
}